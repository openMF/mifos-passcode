<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/fp_dialog_padding"
        android:paddingTop="@dimen/fp_dialog_padding"
        android:paddingRight="@dimen/fp_dialog_padding"
        android:paddingBottom="@dimen/default_padding">

        <TextView
            android:id="@+id/fingerprint_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fp_dialog_title_margin_bottom"
            android:text="@string/fp_dialog_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:textColor="?android:attr/textColorPrimary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fingerprint_dialog_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fp_dialog_message_margin_bottom"
            android:text="@string/fp_dialog_message"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="?android:attr/textColorSecondary" />

        <TextView
            android:id="@+id/fingerprint_dialog_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_fingerprint_blue_48dp"
            android:drawablePadding="@dimen/default_padding"
            android:gravity="center_vertical"
            android:text="@string/fp_dialog_status"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="@dimen/fp_dialog_status_text_size" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/fingerprint_dialog_cancel"
            style="?attr/buttonBarButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/fp_dialog_cancel"
            android:textAllCaps="true"
            android:textColor="#0890DD" />
    </LinearLayout>
</LinearLayout>
